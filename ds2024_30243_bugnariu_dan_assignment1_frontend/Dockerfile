FROM node:20 AS build

WORKDIR /app
COPY package.json package-lock.json ./
RUN npm install
COPY . .
COPY .env .

ARG REACT_APP_USER_SERVICE_API_URL
ARG REACT_APP_DEVICE_SERVICE_API_URL
ARG REACT_APP_MONITORING_SERVICE_API_URL
ARG REACT_APP_CHAT_SERVICE_API_URL
ARG REACT_APP_DEVICE_WEBSOCKET
ARG REACT_APP_CHAT_WEBSOCKET
ENV REACT_APP_USER_SERVICE_API_URL=$REACT_APP_USER_SERVICE_API_URL
ENV REACT_APP_DEVICE_SERVICE_API_URL=$REACT_APP_DEVICE_SERVICE_API_URL
ENV REACT_APP_MONITORING_SERVICE_API_URL=$REACT_APP_MONITORING_SERVICE_API_URL
ENV REACT_APP_CHAT_SERVICE_API_URL=$REACT_APP_CHAT_SERVICE_API_URL
ENV REACT_APP_DEVICE_WEBSOCKET=$REACT_APP_DEVICE_WEBSOCKET
ENV REACT_APP_CHAT_WEBSOCKET=$REACT_APP_CHAT_WEBSOCKET


RUN npm run build

FROM nginx:alpine

COPY --from=build /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 3000
CMD ["nginx", "-g", "daemon off;"]
